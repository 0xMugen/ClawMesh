{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://clawmesh.dev/schemas/v0.1/messages/announce.schema.json",
  "title": "announce payload",
  "type": "object",
  "required": ["display_name", "supports", "status"],
  "properties": {
    "display_name": {
      "type": "string",
      "minLength": 1
    },
    "supports": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": ["announce", "request_match", "schedule", "offer"]
      },
      "uniqueItems": true
    },
    "status": {
      "type": "string",
      "enum": ["available", "busy", "away"]
    }
  },
  "additionalProperties": false
}
